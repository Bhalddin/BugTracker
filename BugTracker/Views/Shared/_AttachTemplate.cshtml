@* Template to easily add a new attachment *@
<template id="attachTemplate">

    <br />

    <div class="form-group">
        <label for="attachment##" class="control-label col-md-3">File attachment</label>
        <div class="col-md-9">
            <input type="file" name="attachment##" />
        </div>
    </div>

    <div class="form-group">
        <label for="attachment##" class="control-label col-md-3">Attachment description</label>
        <div class="col-md-9">
            <input class="form-control" type="text" name="attachment##" />
        </div>
    </div>

    @* button to add another form *@
    <button id="attachButton" class="btn btn-info col-md-offset-3">Add another attachmen</button>

</template>

@* required scripts *@
<script src="~/Scripts/AddAttachment.js"></script>