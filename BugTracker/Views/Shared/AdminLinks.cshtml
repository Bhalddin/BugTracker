@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Administrator"))
    {
        <li class="dropdown">
            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">Admin</a>
            <ul class="dropdown-menu dropdown-menu-left">
                <li>@Html.ActionLink("Register New User", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("Edit Users Roles", "ListRoles", "Account")</li>
                <li role="presentation" class="divider"><br /></li>
                <li>@Html.ActionLink("View Projects", "Index", "Projects")</li>
                <li>@Html.ActionLink("Create New Project", "Create", "Projects")</li>
            </ul>
        </li>
    }
}