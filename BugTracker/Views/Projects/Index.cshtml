@model IEnumerable<BugTracker.Models.Project>

@{
    ViewBag.Title = "Projects";
}

<h1><b>All Projects</b></h1>


<table class="table">
    <tr>
        <th>
            Project
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectDescription)
            </td>
            <td>
                <div class="btn-group-sm btn-group-vertical">
                    @Html.ActionLink("Add People", "AddUsers", "Projects", new { projectID = item.ID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Remove People", "RemoveUsers", "Projects", new { projectID = item.ID }, new { @class = "btn btn-primary" })
                </div>
                <div class="btn-group-sm btn-group-vertical">
                    @Html.ActionLink("Edit Project", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete Project", "Delete", new { id = item.ID }, new { @class = "btn btn-primary" })
                </div>
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New Project", "Create", null, new { @class = "btn btn-success" })
</p>