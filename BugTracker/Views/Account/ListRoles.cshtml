@model IEnumerable<BugTracker.Models.RoleViewModel>

@{
    ViewBag.Title = "ListRoles";
}


<h2>Roles</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var role in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => role.RoleName)
        </td>
        <td>
            @Html.ActionLink("Assign", "AssignUserRole", new { roleId = role.RoleId }) |
            @Html.ActionLink("Unassign", "UnassignUserRole", new { roleId = role.RoleId })
        </td>
    </tr>
}

</table>
